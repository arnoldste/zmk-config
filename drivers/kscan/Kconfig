DT_COMPAT_ZMK_KSCAN_ADC_JOYSTICK := zmk,kscan-adc-joystick

if KSCAN

config ZMK_KSCAN_ADC_JOYSTICK
    bool "ZMK ADC joystick + GPIO button kscan"
    default $(dt_compat_enabled,$(DT_COMPAT_ZMK_KSCAN_ADC_JOYSTICK))
    select ADC
    select GPIO
    help
      Reads two ADC joystick axes (VRx/VRy) and maps them to directional
      key positions, while also reading direct GPIO buttons.

endif # KSCAN
